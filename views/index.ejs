 <% include partials/header %>
<div class="container">
  <h1>Add Customers</h1>
  
  <% if(errors) { %>
  <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Errors</span>
          <% errors.forEach(function(error){ %>
            <p><%= error.msg %></p>
          <% })%>
        </div>
      </div>
    </div>
  </div>
 <% } %>

  <div class="row">
    <form class="col s12" action="/users/add" method="POST">
      <div class="row">
        <div class="input-field col s6">
          <input id="first_name" type="text" name="first_name" class="validate">
          <label for="first_name">First Name</label>
        </div>
        <div class="input-field col s6">
          <input id="last_name" name="last_name" type="text" class="validate">
          <label for="last_name">Last Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="email" type="email" class="validate" name="email">
          <label for="email">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <button class="btn waves-effect waves-light" type="submit">Submit</button>
        </div>
      </div>
    </form>
  </div>

  <div class="row">
  <div class="col s12">
  <ul class="collection with-header">
  <li class="collection-header"><h4><%= title %></h4></li>
  <% users.forEach(function(user) { %>
  <li class="collection-item"><div><%= user.first_name + ' ' + user.last_name %>
  <a class="secondary-content deleteUser" href="#" data-id="<%= user._id %>"><i class="material-icons">delete</i></a></div>
  </li>
  <% }); %>
</ul>
</div>
</div>
</div>
 <% include partials/footer %>

